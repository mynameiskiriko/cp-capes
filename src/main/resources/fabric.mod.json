  "name": "Cloaks+ Capes",
  "description": "An unofficial fabric mod to add Cloaks+ Capes without hosts modification!",
  "authors": [
    "tanudev",
    "Dragonostic"
  ],
  "contact": {
    "discord": "@tanudev"
  },
  "license": "GNU LGPL v2.1",
  "icon": "assets/cpcapes/icon.png",
